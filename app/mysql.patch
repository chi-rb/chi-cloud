+---
+apiVersion: apps/v1
+kind: Deployment
+metadata:
+  name: {{ name }}
+  labels:
+    name: {{ name }}
+spec: 
+  strategy:
+    type: {{ strategy }}
+  selector:
+    matchLabels:
+      name: {{ name }}
+  template:
+    metadata:
+      labels:
+        name: {{ name }}
+    spec:
+      containers:
+      - image: {{ image }}
+        imagePullPolicy: {{ pull }}
+        name: {{ name }}
+        env:
+        - name: MYSQL_ROOT_PASSWORD
+          value: '{{ pass }}'
+        - name: MYSQL_DATABASE
+          value: '{{ db }}'
+        volumeMounts:
+        - mountPath: /var/lib/mysql
+          name: data
+          subPath: {{ name }}
+      volumes:
+      - name: data
+        persistentVolumeClaim:
+          claimName: data
