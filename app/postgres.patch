@@ -0,0 +1,38 @@
+{{ render pod.service }}
+---
+apiVersion: apps/v1
+kind: Deployment
+metadata:
+  name: {{ name }}
+  labels:
+    name: {{ name }}
+spec: 
+  strategy:
+    type: {{ strategy }}
+  selector:
+    matchLabels:
+      name: {{ name }}
+  template:
+    metadata:
+      labels:
+        name: {{ name }}
+    spec:
+      containers:
+      - image: {{ image }}
+        imagePullPolicy: {{ pull }}
+        name: {{ name }}
+        env:
+        - name: POSTGRES_USER
+          value: {{ user }}
+        - name: POSTGRES_PASSWORD
+          value: '{{ pass }}'
+        - name: POSTGRES_DB
+          value: {{ db }}
+        volumeMounts:
+        - mountPath: /var/lib/postgresql/data
+          name: data
+          subPath: {{ name }}
+      volumes:
+      - name: data
+        persistentVolumeClaim:
+          claimName: data
